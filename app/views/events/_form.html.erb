    <%= form.label :event_date, style: "display: block" %>
    <%= form.date_field :event_date %>
  </div>

  <div>
    <%= form.label :event_at, style: "display: block" %>
    <%= form.datetime_field :event_at %>
  </div>

  <div>
    <%= form.label :discription, style: "display: block" %>
    <%= form.text_area :discription %>
  </div>

  <div>
    <%= form.label :picture, style: "display: block" %>
    <%= form.file_field :picture %>
  </div>

  <div>
    <%= form.label :point, style: "display: block" %>
    <%= form.number_field :point %>
  </div>

  <div>
    <%= form.label :people, style: "display: block" %>
    <%= form.number_field :people %>
  </div>

  <div>
    <%= form.label :people_remaining, style: "display: block" %>
    <%= form.number_field :people_remaining %>
  </div>

  <div>
    <%= form.label :people_participants, style: "display: block" %>
    <%= form.number_field :people_participants %>
  </div>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_area :name %>
  </div>

  <div>
    <%= form.label :outside, style: "display: block" %>
    <%= form.check_box :outside %>
  </div>

